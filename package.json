{
  "name": "task-pilot",
  "displayName": "TaskPilot",
  "description": "Hierarchical task menu for VS Code - execute terminal commands, VS Code commands, and tasks from YAML configuration",
  "version": "0.1.0",
  "publisher": "hollySizzle",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/hollySizzle/task_pilot.git"
  },
  "homepage": "https://github.com/hollySizzle/task_pilot#readme",
  "bugs": {
    "url": "https://github.com/hollySizzle/task_pilot/issues"
  },
  "keywords": [
    "task",
    "menu",
    "terminal",
    "command",
    "automation",
    "workflow"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskPilot",
          "title": "TaskPilot",
          "icon": "resources/taskpilot-icon.svg"
        }
      ]
    },
    "views": {
      "taskPilot": [
        {
          "type": "webview",
          "id": "taskPilot.sidebarView",
          "name": "Menu"
        }
      ]
    },
    "commands": [
      {
        "command": "taskPilot.showMenu",
        "title": "TaskPilot: Show Menu"
      },
      {
        "command": "taskPilot.reloadConfig",
        "title": "TaskPilot: Reload Configuration"
      },
      {
        "command": "taskPilot.refreshSidebar",
        "title": "TaskPilot: Refresh Sidebar",
        "icon": "$(refresh)"
      },
      {
        "command": "taskPilot.openEditor",
        "title": "TaskPilot: Open Config Editor",
        "icon": "$(edit)"
      }
    ],
    "keybindings": [
      {
        "command": "taskPilot.showMenu",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "configuration": {
      "title": "TaskPilot",
      "properties": {
        "taskPilot.configPath": {
          "type": "string",
          "default": ".vscode/task-menu.yaml",
          "description": "Path to the YAML configuration file (relative to workspace root)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile:tsc": "tsc -p ./",
    "pretest": "npm run compile:tsc",
    "test": "node ./out/test/runTest.js",
    "test:coverage": "c8 --reporter=text --reporter=html node ./out/test/runTest.js",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "c8": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "out/test/**"
    ],
    "all": true
  }
}
