{
  "name": "taskpilot",
  "displayName": "%displayName%",
  "description": "%description%",
  "version": "0.5.1",
  "publisher": "hollySizzle",
  "license": "MIT",
  "icon": "resources/icon.png",
  "extensionKind": [
    "workspace"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hollySizzle/task_pilot.git"
  },
  "homepage": "https://github.com/hollySizzle/task_pilot#readme",
  "bugs": {
    "url": "https://github.com/hollySizzle/task_pilot/issues"
  },
  "keywords": [
    "task",
    "menu",
    "terminal",
    "command",
    "automation",
    "workflow"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "l10n": "./l10n",
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taskPilot",
          "title": "%viewsContainers.taskPilot.title%",
          "icon": "resources/taskpilot-icon.svg"
        }
      ]
    },
    "views": {
      "taskPilot": [
        {
          "type": "webview",
          "id": "taskPilot.sidebarView",
          "name": "%views.sidebarView.name%"
        }
      ]
    },
    "commands": [
      {
        "command": "taskPilot.showMenu",
        "title": "%commands.showMenu.title%"
      },
      {
        "command": "taskPilot.reloadConfig",
        "title": "%commands.reloadConfig.title%"
      },
      {
        "command": "taskPilot.refreshSidebar",
        "title": "%commands.refreshSidebar.title%",
        "icon": "$(refresh)"
      },
      {
        "command": "taskPilot.openEditor",
        "title": "%commands.openEditor.title%",
        "icon": "$(edit)"
      },
      {
        "command": "taskPilot.generateSample",
        "title": "%commands.generateSample.title%"
      },
      {
        "command": "taskPilot.openGlobalSettings",
        "title": "%commands.openGlobalSettings.title%",
        "icon": "$(gear)"
      },
      {
        "command": "taskPilot.testDevContainer",
        "title": "TaskPilot: Test DevContainer (Debug)"
      }
    ],
    "keybindings": [
      {
        "command": "taskPilot.showMenu",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t"
      }
    ],
    "configuration": {
      "title": "%configuration.title%",
      "properties": {
        "taskPilot.configPath": {
          "type": "string",
          "default": ".vscode/task-menu.yaml",
          "description": "%configuration.configPath.description%"
        },
        "taskPilot.globalMenu": {
          "type": "array",
          "default": [],
          "markdownDescription": "%configuration.globalMenu.description%",
          "items": {
            "type": "object",
            "properties": {
              "label": {
                "type": "string",
                "description": "Menu item label"
              },
              "icon": {
                "type": "string",
                "description": "VS Code Codicon (e.g., $(terminal)) or emoji"
              },
              "description": {
                "type": "string",
                "description": "Description shown on hover"
              },
              "type": {
                "type": "string",
                "enum": ["terminal", "vscodeCommand", "task", "openInDevContainer", "openRemoteSSH"],
                "description": "Action type"
              },
              "command": {
                "type": "string",
                "description": "Command to execute"
              },
              "terminal": {
                "type": "string",
                "description": "Terminal name (for terminal type)"
              },
              "cwd": {
                "type": "string",
                "description": "Working directory (for terminal type)"
              },
              "path": {
                "type": "string",
                "description": "Folder path (for openInDevContainer/openRemoteSSH)"
              },
              "host": {
                "type": "string",
                "description": "SSH host name (for openRemoteSSH)"
              },
              "children": {
                "type": "array",
                "description": "Child menu items",
                "items": {
                  "$ref": "#/properties/taskPilot.globalMenu/items"
                }
              }
            },
            "required": ["label"]
          }
        }
      }
    },
    "yamlValidation": [
      {
        "fileMatch": "**/task-menu.yaml",
        "url": "./schemas/taskpilot.schema.json"
      },
      {
        "fileMatch": "**/taskpilot.yaml",
        "url": "./schemas/taskpilot.schema.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run generate && npm run package",
    "compile:scss": "node scripts/compile-scss.js",
    "compile": "npm run compile:scss && webpack",
    "watch": "npm run compile:scss && webpack --watch",
    "package": "npm run compile:scss && webpack --mode production --devtool hidden-source-map",
    "compile:tsc": "tsc -p ./",
    "pretest": "npm run compile:tsc",
    "test": "node ./out/test/runTest.js",
    "test:e2e": "npm run compile:tsc && node ./out/test/e2e/runTest.js",
    "test:e2e:coverage": "npm run compile:tsc && c8 --reporter=text --reporter=html node ./out/test/e2e/runTest.js",
    "test:coverage": "c8 --reporter=text --reporter=html node ./out/test/runTest.js",
    "test:webview": "jest",
    "test:webview:coverage": "jest --coverage",
    "test:all": "npm run test && npm run test:e2e && npm run test:webview",
    "test:all:coverage": "rimraf .c8_output && npm run compile:tsc && c8 --clean=false --reporter=none node ./out/test/runTest.js && c8 --clean=false --reporter=none node ./out/test/e2e/runTest.js && jest --coverage --coverageDirectory=.jest_output && c8 report --reporter=text --reporter=html",
    "lint": "eslint src --ext ts",
    "generate:schema": "ts-node scripts/generate-schema.ts",
    "generate:samples": "ts-node scripts/generate-samples.ts",
    "generate": "npm run generate:schema && npm run generate:samples"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-electron": "^2.5.2",
    "c8": "^10.1.3",
    "eslint": "^8.54.0",
    "glob": "^13.0.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.4.0",
    "mocha": "^11.7.5",
    "rimraf": "^6.1.2",
    "sinon": "^21.0.1",
    "ts-json-schema-generator": "^2.4.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.0",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/codicons": "^0.0.44",
    "js-yaml": "^4.1.0",
    "sass": "^1.97.1"
  },
  "c8": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "out/test/**"
    ],
    "all": true
  }
}
